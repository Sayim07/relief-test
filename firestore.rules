rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
        (exists(/databases/$(database)/documents/admins/$(request.auth.uid)) &&
         get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.role == 'admin');
    }

    // Helper function to check if user is beneficiary
    function isBeneficiary() {
      return isAuthenticated() && 
        (exists(/databases/$(database)/documents/beneficiaries/$(request.auth.uid)) &&
         get(/databases/$(database)/documents/beneficiaries/$(request.auth.uid)).data.role == 'beneficiary');
    }

    // Helper function to check if user is donor
    function isDonor() {
      return isAuthenticated() && 
        (exists(/databases/$(database)/documents/donors/$(request.auth.uid)) &&
         get(/databases/$(database)/documents/donors/$(request.auth.uid)).data.role == 'donor');
    }

    // Helper function to check if user is relief partner
    function isReliefPartner() {
      return isAuthenticated() && 
        (exists(/databases/$(database)/documents/relief_partners/$(request.auth.uid)) &&
         get(/databases/$(database)/documents/relief_partners/$(request.auth.uid)).data.role == 'relief_partner');
    }
    
    // Admins collection
    match /admins/{userId} {
      allow read: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      allow list: if isAdmin();
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // Donors collection
    match /donors/{userId} {
      allow read: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      allow list: if isAdmin();
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if request.auth.uid == userId || isAdmin();
      allow delete: if isAdmin();
    }
    
    // Beneficiaries collection
    match /beneficiaries/{userId} {
      allow read: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      allow list: if isAdmin();
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if request.auth.uid == userId || isAdmin();
      allow delete: if isAdmin();
    }
    
    // Relief Partners collection
    match /relief_partners/{userId} {
      allow read: if isAuthenticated() && (request.auth.uid == userId || isAdmin() || isBeneficiary());
      allow list: if isAdmin() || isBeneficiary();
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if request.auth.uid == userId || isAdmin();
      allow delete: if isAdmin();
    }
    
    // Categories - Needed for initialization and audit trail
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin() || (isAuthenticated() && !exists(/databases/$(database)/documents/categories/$(categoryId)));
    }
    
    // Transactions - Public read for audit trail
    match /transactions/{transactionId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    // Donations
    match /donations/{donationId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAdmin() || (isAuthenticated() && request.auth.uid == resource.data.donorId);
      allow delete: if isAdmin();
    }
    
    // Relief Funds
    match /reliefFunds/{fundId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Beneficiary Funds
    match /beneficiaryFunds/{fundId} {
      allow read: if isAuthenticated() && (request.auth.uid == resource.data.beneficiaryId || isAdmin());
      allow write: if isAdmin();
    }
    
    // Relief Partner Assignments
    match /reliefPartnerAssignments/{assignmentId} {
      allow read: if isAuthenticated() && (
        request.auth.uid == resource.data.reliefPartnerId || 
        request.auth.uid == resource.data.beneficiaryId || 
        isAdmin()
      );
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && (
        request.auth.uid == resource.data.reliefPartnerId || 
        request.auth.uid == resource.data.beneficiaryId || 
        isAdmin()
      );
    }
    
    // Receipts - Public read for QR verification
    match /receipts/{receiptId} {
      allow read: if true; 
      allow create: if isAuthenticated();
      allow update: if isAdmin() || (isAuthenticated() && request.auth.uid == resource.data.payerId);
      allow delete: if isAdmin();
    }
  }
}
