rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Check if user is an admin - SAFER EVALUATION
    function isAdmin() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/admins/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.role == 'admin';
    }

    // Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Admins collection
    match /admins/{adminId} {
      allow read, list: if isAuthenticated();
      allow write: if false;
    }

    // Donors collection
    match /donors/{donorId} {
      allow read, list: if isAuthenticated();
      allow write: if request.auth != null && request.auth.uid == donorId;
    }

    // Beneficiaries collection
    match /beneficiaries/{beneficiaryId} {
      allow read, list: if true;
      allow write: if isAdmin() || (request.auth != null && request.auth.uid == beneficiaryId);
    }

    // Relief Partners collection
    match /relief_partners/{partnerId} {
      allow read, list: if true;
      allow write: if isAdmin() || (request.auth != null && request.auth.uid == partnerId);
    }

    // Categories collection
    match /categories/{categoryId} {
      allow read, list: if true;
      allow write: if isAdmin();
    }

    // Donations collection
    match /donations/{donationId} {
      allow read, list: if true;
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }

    // Relief Partner Assignments
    match /relief_partner_assignments/{assignmentId} {
      allow read, list: if true;
      allow create, update: if isAuthenticated();
      allow delete: if isAdmin();
    }

    // Relief Funds
    match /relief_funds/{fundId} {
      allow read, list: if true;
      allow write: if isAdmin();
    }

    // Beneficiary Funds
    match /beneficiary_funds/{fundId} {
      allow read, list: if true;
      allow write: if isAuthenticated();
    }

    // Relief Requests collection
    match /relief_requests/{requestId} {
      allow read, list: if true;
      allow create: if true; 
      allow update, delete: if isAdmin();
    }

    // Transactions collection (Ledger)
    match /transactions/{txHash} {
      allow read, list: if true;
      allow create: if isAuthenticated();
      allow update, delete: if false;
    }
  }
}
