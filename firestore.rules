rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to get user profile
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && getUserData().role == 'admin';
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      allow delete: if isAdmin();
    }
    
    // Categories - Needed for initialization and audit trail
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin() || (isAuthenticated() && !exists(/databases/$(database)/documents/categories/$(categoryId)));
    }
    
    // Beneficiaries - Public read for transparency, admin write
    match /beneficiaries/{beneficiaryId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Transactions - Public read for audit trail
    match /transactions/{transactionId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    // Donations
    match /donations/{donationId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAdmin() || (isAuthenticated() && request.auth.uid == resource.data.donorId);
      allow delete: if isAdmin();
    }
    
    // Relief Funds
    match /reliefFunds/{fundId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Beneficiary Funds
    match /beneficiaryFunds/{fundId} {
      allow read: if isAuthenticated() && (request.auth.uid == resource.data.beneficiaryId || isAdmin());
      allow write: if isAdmin();
    }
    
    // Relief Partner Assignments
    match /reliefPartnerAssignments/{assignmentId} {
      allow read: if isAuthenticated() && (
        request.auth.uid == resource.data.reliefPartnerId || 
        request.auth.uid == resource.data.beneficiaryId || 
        isAdmin()
      );
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && (
        request.auth.uid == resource.data.reliefPartnerId || 
        request.auth.uid == resource.data.beneficiaryId || 
        isAdmin()
      );
    }
    
    // Receipts - Public read for QR verification
    match /receipts/{receiptId} {
      allow read: if true; 
      allow create: if isAuthenticated();
      allow update: if isAdmin() || (isAuthenticated() && request.auth.uid == resource.data.payerId);
      allow delete: if isAdmin();
    }
  }
}
